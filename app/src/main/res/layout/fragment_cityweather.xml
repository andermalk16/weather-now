<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardBackgroundColor="@color/colorFume"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false"
    card_view:contentPaddingLeft="4dp"
    card_view:contentPaddingRight="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Cidade"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCityDistance"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/tvCityName"
            android:layout_alignBaseline="@+id/tvCityName"
            android:layout_height="wrap_content"
            android:text="999 KM"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/llWeatherContainer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCityName"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconWeather"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvWeatherDescription"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Descricao Tempo"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:text="27C"
            android:textColor="@color/colorAccent"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWeatherContainer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTempMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Min: 23C"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTempMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max: 23C"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

